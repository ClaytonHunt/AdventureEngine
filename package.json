{
  "name": "adventure-engine",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "dotnet run --project apps/AppHost",
    "test": "pnpm --filter web test",
    "test:e2e": "echo 'E2E tests: add in Sprint 3'",
    "test:api": "dotnet test AdventureEngine.slnx --no-build -c Release --logger trx --results-directory ./TestResults",
    "storybook": "pnpm --filter web storybook",
    "build": "pnpm --filter web build",
    "sprint4:reset": "node scripts/sprint4-reset.mjs",
    "sprint4:reset:apply": "node scripts/sprint4-reset.mjs --apply",
    "verify:minimatch": "node scripts/verify-minimatch.mjs",
    "verify:lockfile": "pnpm install --frozen-lockfile --ignore-scripts",
    "verify:audit": "pnpm audit --audit-level high",
    "verify:log-redaction": "node scripts/verify-log-redaction.mjs",
    "verify:apphost": "node scripts/verify-apphost-port-smoke.mjs",
    "verify:storybook": "node scripts/verify-storybook-sprint4.mjs",
    "verify:perf-budgets": "node scripts/verify-perf-budgets.mjs",
    "measure:ci-perf": "node scripts/measure-ci-perf.mjs"
  },
  "devDependencies": {
    "ajv": "8.17.1",
    "yaml": "2.8.0"
  },
  "pnpm": {
    "overrides": {
      "minimatch": "^10.2.1"
    }
  }
}
